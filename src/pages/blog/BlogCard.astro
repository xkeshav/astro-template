---
interface Props {
  url: string;
  title: string;
  description?: string;
  image: string;
  author?: string;
  date?: string;
  height?: string | number; // can be '300px' or 300
}

const { url, title, description, image, author, date, height = "auto" } = Astro.props;
---

<article class="">
  <a href={url}>
    <div class="">
      <div class="image">
        <figure class={`overflow-hidden ${typeof height === "number" ? `h-[${height}px]` : `h-[${height}]`}`}>
          <img src={image} alt={title} loading="lazy" class="" />
        </figure>

        <div class="">
          <h3 class="">
            {title}
          </h3>

          {description && <p class="">{description}</p>}

          <div class="">
            <div class="">
              {author && <p class="font-medium">By {author}</p>}
            </div>
            {date && <time datetime={date}>{date}</time>}
          </div>
        </div>
      </div>
    </div>
  </a>
</article>
